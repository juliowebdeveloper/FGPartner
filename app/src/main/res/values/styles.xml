<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <style name="titleStyle" parent="AppTheme">
        <item name="android:typeface">monospace</item>
        <item name ="android:textSize">20dp</item>
        <item name ="android:textAlignment">center</item>
        <item name="android:textColor">#343434</item>
    </style>

    <style name="loginButton" parent="AppTheme">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">#FFF0CC</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/buttonshape</item>
        <item name="android:shadowColor">#A80505</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">5</item>

    </style>


    <style name="confirmationButton" parent="AppTheme">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">#FFF0CC</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/confirmationbuttonshape</item>
        <item name="android:shadowColor">#A80505</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">5</item>

    </style>


</resources>
