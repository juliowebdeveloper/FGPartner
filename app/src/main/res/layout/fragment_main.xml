<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bem vindo ao FG Partner - O único aplicativo que te ajudará nas Match ups dos jogos de luta abaixo" />



    <GridLayout


        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="1"
        android:rowCount="5">

        <ImageView
            android:minWidth="180dp"
            android:minHeight="50dp"
            android:layout_marginBottom="7dp"
            android:id="@+id/ivFragMainGuilty"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_gravity="center"
            />


        <ImageView
            android:minWidth="180dp"
            android:minHeight="50dp"
            android:layout_marginBottom="7dp"

            android:id="@+id/ivFragMainKiller"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_gravity="center"
            />

        <ImageView
            android:minWidth="180dp"
            android:minHeight="50dp"
            android:layout_marginBottom="7dp"

            android:id="@+id/ivFragMainStreet5"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_gravity="center"
            />


        <ImageView
            android:minWidth="180dp"
            android:minHeight="50dp"
            android:layout_marginBottom="7dp"

            android:id="@+id/ivFragMainKof98"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_gravity="center"
            />


        <ImageView
            android:minWidth="180dp"
            android:minHeight="50dp"
            android:layout_marginBottom="7dp"

            android:id="@+id/ivFragMainKof2002"
            android:layout_column="0"
            android:layout_row="4"
            android:layout_gravity="center"
            />


    </GridLayout>


</LinearLayout>