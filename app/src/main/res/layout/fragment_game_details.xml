<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardview_light_background"
        tools:context="julio.com.br.fgpartner.fragment.GameDetailsFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/gameDetailsGameImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#80000000"
                    android:minHeight="120dp"

                    />

                <TextView
                    android:id="@+id/gameDetailsName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="90dp"
                    android:text="Game Name"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="25dp"
                    android:textStyle="bold"


                    />


            </FrameLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="#dedcdc"
                    android:minHeight="1dp">

                </View>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|bottom"
                    android:layout_marginLeft="10dp"
                    android:text="@string/personagensSelecionaveis"
                    android:textColor="#5b5656" />

            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvCharacters"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"


                    />

                </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="#dedcdc"
                    android:minHeight="1dp">

                </View>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|bottom"
                    android:layout_marginLeft="10dp"
                    android:text="@string/topPlayers"
                    android:textColor="#5b5656" />


                <ListView
                    android:id="@+id/lvTopPlayers"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">


                </ListView>


            </LinearLayout>

        </LinearLayout>

    </FrameLayout>



</ScrollView>